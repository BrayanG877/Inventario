print("Bienvenido la tienda verde".center(30,'-'))
opciones = {
    "1": "Ingresar Codigo del producto",
    "2": "Camisetas Retro",
    "3": "Gorras",
    "4": "Bufandas",
    "5": "Uniformes",
    "6": "Guallos",
    "7": "Guantes"
}
print("Seleccione una de las opciones para acceder a su funcion")
for codigo, producto in opciones.items():
    print(f"{codigo} = {producto}")

while True:
    codigo_producto = input("Ingrese el codigo de su producto: ")
    if codigo_producto in opciones:
        nombre_producto = opciones[codigo_producto]
        print (f"tu producto es: {nombre_producto}")
        break
    else:
        print("Codigo invalido, por favor seleccione un codigo de la lista.")

descripcion = input("Ingrese la descripción del producto: ")

proveedor = input("Ingrese el nombre del proveedor: ")

print("\nProducto ingresado con éxito:")
print(f"Producto: {nombre_producto}")
print(f"Descripción: {descripcion}")
print(f"Proveedor: {proveedor}")
